<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:scrollbarSize="50dip"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible"
    tools:context="com.vignesh.gkart.UserDataActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/link_to_register"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dip"
            android:layout_marginTop="40dip"
            android:gravity="center"
            android:text="Enter Personal details(All Fields required)"
            android:textColor="#0b84aa"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#372c24" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="5dip"
            android:singleLine="true" />
        <!-- Password Label -->

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="E Mail"
            android:textColor="#372c24" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#372c24" />

        <EditText
            android:id="@+id/et_addr1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true" />

        <EditText
            android:id="@+id/et_addr2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="City"
            android:textColor="#372c24" />

        <EditText
            android:id="@+id/et_city"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_weight="3282.02"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_pin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PinCode"
            android:textColor="#372c24" />

        <EditText
            android:id="@+id/et_pin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_weight="135.63"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_retailer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Retailer"
            android:textColor="#372c24" />

        <Spinner
            android:id="@+id/sp_retailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/retailer_arrays"
            android:prompt="@string/retailer_prompt" />

        <!-- Login button -->

        <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:text="Next>>" />
    </LinearLayout>

</ScrollView>